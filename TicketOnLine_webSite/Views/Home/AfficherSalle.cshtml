
@model IEnumerable<TicketOnLine_webSite.Models.SalleWeb>

@{
    ViewData["Title"] = "AfficherSalle";
}

    <style>
        body {
            color: #696969;
        }

        a:link {
            color: #3b3420;
            text-decoration: none;
        }

        a:visited {
            color: #3b3420;
            text-decoration: none;
        }

        a:hover {
            color: #a52f09;
            text-decoration: none;
        }

        a:active {
            color: #a52f09;
        }

        a.order-button, a.order-button:hover {
            color: #fdfcf7;
        }

        .productInfo, .action {
            max-width: 200px;
        }

        p {
            font-size: 0.8rem;
        }

        #orderProcess {
            list-style: none;
            padding: 0;
            clear: both;
        }

            #orderProcess li {
                color: #696969;
                display: inline;
                font-size: 1.2em;
                margin-right: 15px;
                padding: 3px 0px 0px 5px;
            }

        .step-number {
            background-color: #edece8;
            border: 1px solid #e6e4d9;
            font-size: 1.5em;
            margin-right: 5px;
            padding: 3px 10px;
        }

        .current .step-number {
            background-color: #a52f09;
            border-color: #712107;
            color: #fefefe;
        }

        .orderPageList {
            padding-inline-start: 20px;
        }

        .actions .order-button {
            margin-left: 20px;
        }
    </style>

<h1>AfficherSalle</h1>

<div id="SallesWrapper" class="row">
    @foreach (var item in Model)
    {
        <div class="col-sm-6">
            <div class="SalleInfo">
                <h3>@item.Nom</h3>
                <img class="product-image img-fluid img-thumbnail" src="~/Images/Image/@item.Image" alt="Image of @item.Nom" />
                <p>Nombre de place : @item.Capacite </p>
            </div>
            <div class="action">
                <a class="btn btn-sm btn-danger ">Reserver</a>
            </div>
        </div>
    }
</div>