@model IEnumerable<TicketOnLine_webSite.Models.ReservationWeb>
@using TicketOnLine_webSite.Infrastructure
@{
    ViewData["Title"] = "Panier";
}

    <style>
        th {
            background-color: lightsteelblue;
        }
    </style>

<h1>Panier</h1>
<div class="container border">
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>
                        Date de l'événement
                        @*@Html.DisplayNameFor(model => model.Date)*@
                    </th>
                    <th>
                        Lieux
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.NbrPlace)
                    </th>
                    <th>
                        @*@Html.DisplayNameFor(model => model.IdEvent)*@
                        nom de l'evenement
                    </th>
                    @*<th>
                        @Html.DisplayNameFor(model => model.PrixPlace)
                    </th>*@
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Date)
                        </td>
                        <td>
                            @*@TicketOnLine_webSite.Services.ServicesSalle.Get(item.IdEvent).Result.Lieux*@
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NbrPlace)
                        </td>
                        <td>
                            @TicketOnLine_webSite.Services.ServicesEvent.Get(item.Id).Result.NomSpectacle
                        </td>
                        @*<td>
                            @Html.DisplayFor(modelItem => item.PrixPlace)
                        </td>*@
                        <td>
                            <a class="btn btn-success" asp-action="AddOneReservation" asp-route-id="@item.Id">+</a>
                            <a class="btn btn-outline-warning" asp-action="RemoveOneReservation" asp-route-id="@item.Id">-</a>
                            <a class="btn btn-danger" asp-action="RemoveAll">x</a>

                            @*@Html.ActionLink("AddOne", "AddOneReservation", "Home", new { id = item.Id })*@
                            @*
                                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })*@
                        </td>
                    </tr>
                }

            </tbody>
        </table>
    </div>
    @if (ViewBag.liste.Count > 0)
    {
        <a class="btn btn-danger" asp-controller="Home" asp-action="FinalisationReservation1">Validation panier</a>
    }
    else
    {
        <p style="color:red;">Vous n'avez pas encore de réservation dans le panier</p>
    }


</div>

